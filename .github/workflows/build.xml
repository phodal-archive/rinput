name: build

on:
  push:
    branches:
      - master
      - develop

jobs:
  build: 
    name: Build on ${{ matrix.os }}
    runs-on: ${{ matrix.os }}
    strategy:
      matrix: 
        os: [ubuntu-latest, windows-latest]
      
    steps:
      - uses: actions/checkout@v1
      - name: Build
        run: cargo build --verbose
      
  build_macos:
    name: Build on macOS-latest
    runs-on: macOS-latest

    steps:
      - uses: actions/checkout@v1
      - name: Install rust
        run: brew install rust
      - name: Build
        run: cargo build --verbose
